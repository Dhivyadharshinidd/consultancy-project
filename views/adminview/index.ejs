    <h1>Hello Admin!</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">S.No</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">Email</th>
                <th scope="col">MobileNumber</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">Zipcode</th>
                <th scope="col">State</th>
                <th scope="col">Date</th>
                <th scope="col">TimeSlot</th>
                <th scope="col">ServiceType</th>
                <th scope="col">PropertyType</th>


            </tr>
        </thead>
        <tbody>
            <%var count=0%>
                <% for(let i of details){%>

                    <tr>
                        <%count=count+1%>
                            <td>
                                <%=count%>
                            </td>
                            <td>
                                <%=i.firstname%>
                            </td>
                            <td>
                                <%=i.lastname%>
                            </td>
                            <td>
                                <%=i.email%>
                            </td>
                            <td>
                                <%=i.mobilenumber%>
                            </td>
                            <td>
                                <%=i.address%>
                            </td>
                            <td>
                                <%=i.city%>
                            </td>
                            <td>
                                <%=i.zipcode%>
                            </td>
                            <td>
                                <%=i.state%>
                            </td>
                            <td>
                                <%=i.date%>
                            </td>
                            <td>
                                <%=i.timeslot%>
                            </td>
                            <td>
                                <%=i.servicetype.toUpperCase()%>
                            </td>
                            <td>
                                <%=i.propertytype.toUpperCase()%>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/adminview/<%=i._id%>"
                                    onclick="myFunction(this, 'green')" id="a">Confirm</a>
                            </td>

                    </tr>
                    <%}%>


