    <h1>Hello Admin!</h1>

    <div style="padding: 100px;">



        <h3>Customer <%=detail.firstname%> details!!!</h3>

        <form style="align-items: center; padding:20px;" method="POST" action="/confirm">
            <input name="userid" type="hidden" value="<%=detail.userid%>">
            <div class="form-group  col-md-4">
                <label class="required ">First Name</label><br>
                <h4>
                    <%=detail.firstname.toUpperCase()%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label class="required">Last Name</label><br>
                <h4>
                    <%=detail.lastname.toUpperCase()%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label class="required">Email</label><br>
                <h4>
                    <%=detail.email%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label class="required">Mobile number</label><br>
                <h4>
                    <%=detail.mobilenumber%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label>Address</label>
                <h4>
                    <%=detail.address%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label>City</label><br>
                <h4>
                    <%=detail.city%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label>Zip Code</label><br>
                <h4>
                    <%=detail.zipcode%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label>State</label>
                <h4>
                    <%=detail.state%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label>Date of customer's availability</label>
                <h4>
                    <%=detail.date%>
                </h4>
                <label>Date (Please enter the date of your availability)</label>
                <input type="date" class="form-control" name="date">
            </div>
            <div class="form-group col-md-4">
                <label>Time slot of customer's availability</label>
                <h4>
                    <%=detail.timeslot%>
                </h4>
                <label>Time slot (Please enter the time slot of your availability)</label>
                <select class="form-control" name="timeslot">
                    <option value="9.00 a.m. to 12.30 p.m.">9.00 a.m. to 12.30 p.m.</option>
                    <option value="1.00 p.m. to 4.30 p.m.">1.00 p.m. to 4.30 p.m.</option>
                </select>
            </div>
            
            <div class="form-group col-md-4">
                <label>Service Type</label>
                <h4>
                    <%=detail.servicetype%>
                </h4>
            </div>
            <div class="form-group col-md-4">
                <label>Property Type</label>
                <h4>
                    <%=detail.propertytype%>
                </h4>
            </div>

            <br>

            <br>
            <!-- <a class="btn btn-primary" role="button" value="Add Name">Submit</a> -->


            <button class="btn btn-primary">Submit</button>
        </form>
